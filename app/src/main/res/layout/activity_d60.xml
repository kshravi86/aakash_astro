<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/d60_title"
        app:navigationIcon="@drawable/ic_home_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d60_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/d60_subtitle"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <com.aakash.astro.ui.VedicChartView
                    android:id="@+id/vedicChartView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tableTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Planetary Shashtiamsha Placements"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_marginTop="8dp">
                <TableLayout
                    android:id="@+id/d60Table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3,4,5,6">
                    <TableRow>
                        <TextView android:text="@string/d60_col_planet" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_sign" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_house" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_amsha" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_range" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_name" android:textStyle="bold" />
                        <TextView android:text="@string/d60_col_nature" android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
