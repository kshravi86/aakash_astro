<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_bg_elevated"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/karakaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atmakaraka"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/primaryText" />

        <TextView
            android:id="@+id/karakaPlanet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Planet"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/secondaryText" />

        <TextView
            android:id="@+id/karakaPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/karaka_position_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/primaryText" />

        <TextView
            android:id="@+id/karakaDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/karaka_degree_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/secondaryText" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
