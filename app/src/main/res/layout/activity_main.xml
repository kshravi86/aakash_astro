<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        app:subtitle="Vedic chart generator"
        app:titleCentered="false"
        app:navigationIcon="@drawable/ic_home_black_24dp"
        app:subtitleTextColor="@color/secondaryText"
        app:titleTextColor="@color/primaryText" />

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gradient_start"
        android:fillViewport="true"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.94">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedic Astrology Chart"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/primaryText" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Enter birth details to generate a personalized chart"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:id="@+id/engineIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Engine: Approximate"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/secondaryText" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    app:dividerThickness="1dp"
                    app:dividerColor="@color/surface_variant"
                     />

                <TextView
                    android:id="@+id/sectionBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Birth Details"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/primaryText" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Name (optional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Birth date"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_dashboard_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:hint="Select date" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/timeInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Birth time"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_notifications_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/timeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:hint="Select time" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/dateTimeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="No date and time selected"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/secondaryText" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/placeInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Birth place (city, India)"
                    app:placeholderText="Type city name"
                    app:startIconDrawable="@drawable/ic_place_24"
                    app:startIconContentDescription="Location"
                    app:startIconTint="@color/accent_teal"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/secondaryText"
                    app:boxBackgroundColor="@color/card_bg"
                    app:boxStrokeColor="@color/accent_teal"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/placeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:paddingVertical="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/secondaryText"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="false"
                        android:gravity="start|center_vertical"
                        android:inputType="textCapWords|textPostalAddress"
                        android:imeOptions="actionDone" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/placeCoords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:id="@+id/locationHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="We'll auto-fill coordinates for major Indian cities"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/secondaryText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generateButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Generate Chart" />

                <TextView
                    android:id="@+id/sectionChart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Vedic Chart (South Indian)"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/primaryText" />

                <com.aakash.astro.ui.VedicChartView
                    android:id="@+id/vedicChartView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/actionsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Explore"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/primaryText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/actionGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/sectionResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Results"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/primaryText" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/planetCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:id="@+id/planetContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>


