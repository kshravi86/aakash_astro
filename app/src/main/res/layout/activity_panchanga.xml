<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gradient_start">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/panchanga_title"
        app:subtitle="@string/panchanga_subtitle"
        app:titleTextColor="@color/primaryText"
        app:subtitleTextColor="@color/secondaryText"
        app:navigationIcon="@drawable/ic_home_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:stretchColumns="1">

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Tithi"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tithiValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Tithi Group"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tithiGroupValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Vara"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/varaValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Nakshatra"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/nakshatraValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Yoga"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/yogaValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <TableRow
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:text="Karana"
                            android:textColor="@color/secondaryText"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/karanaValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/primaryText"
                            android:gravity="end" />
                    </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/engineNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/secondaryText"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
