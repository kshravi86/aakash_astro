<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gradient_start">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/ashtakavarga_bav_title"
        app:navigationIcon="@drawable/ic_home_black_24dp"
        app:titleTextColor="@color/primaryText"
        app:navigationIconTint="@color/primaryText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ashtakavarga_bav_subtitle"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/secondaryText" />

            <LinearLayout
                android:id="@+id/sectionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:showDividers="middle"
                android:divider="@drawable/divider_line" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
